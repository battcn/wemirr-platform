<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wemirr.platform.authority.repository.baseinfo.UserMapper">

    <select id="findPage" resultType="com.wemirr.platform.authority.domain.baseinfo.resp.UserResp">
        SELECT
        *
        FROM t_user where deleted = 0
        <if test="req.username != null and req.username != ''">
            and username = #{req.username}
        </if>
    </select>

    <select id="list" resultType="com.wemirr.platform.authority.domain.baseinfo.entity.User">
        SELECT
        *
        FROM t_user
    </select>

</mapper>
